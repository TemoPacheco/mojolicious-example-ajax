% layout 'default';

<script>

$(function() {
    // ask server for message, use helper to generate url by it's name
    $.get('<%= url_for 'welcome message' %>',
        function (data) {
            // put message into the box
            $('#server-message').text(data);
        }
    );
});

</script>

<h2><%= $message %></h2>
<div id='server-message'> </div>
